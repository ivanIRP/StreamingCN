@model MoviesWeb.Models.Pelicula
@{ ViewData["Title"] = "Editar"; }
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-warning text-dark"><h4 class="mb-0"><i class="fas fa-edit me-2"></i>Editar Película</h4></div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="FechaRegistro" />
                    <div class="mb-3"><label asp-for="Nombre" class="form-label"></label><input asp-for="Nombre" class="form-control" /></div>
                    <div class="mb-3"><label asp-for="Sinopsis" class="form-label"></label><textarea asp-for="Sinopsis" class="form-control" rows="5"></textarea></div>
                    <div class="row">
                        <div class="col-md-6 mb-3"><label asp-for="Categoria" class="form-label"></label><select asp-for="Categoria" class="form-select"><option value="Acción">Acción</option><option value="Drama">Drama</option><option value="Ciencia Ficción">Ciencia Ficción</option><option value="Crimen">Crimen</option><option value="Fantasía">Fantasía</option><option value="Suspenso">Suspenso</option></select></div>
                        <div class="col-md-6 mb-3"><label asp-for="Anio" class="form-label"></label><input asp-for="Anio" type="number" class="form-control" /></div>
                    </div>
                    <div class="mb-4"><label asp-for="LinkPelicula" class="form-label"></label><input asp-for="LinkPelicula" class="form-control" /></div>
                    <div class="d-flex gap-2"><button type="submit" class="btn btn-warning btn-lg">Actualizar</button><a href="/Peliculas" class="btn btn-secondary btn-lg">Cancelar</a></div>
                </form>
            </div>
        </div>
    </div>
</div>
