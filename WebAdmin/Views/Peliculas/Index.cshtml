@model IEnumerable<MoviesWeb.Models.Pelicula>
@{ ViewData["Title"] = "Películas"; }
<div class="row mb-4">
    <div class="col-md-6"><h2 class="fw-bold text-white"><i class="fas fa-video me-2" style="color: #e50914;"></i>Películas</h2></div>
    <div class="col-md-6 text-end"><a href="/Peliculas/Create" class="btn btn-primary btn-lg"><i class="fas fa-plus-circle me-2"></i>Nueva Película</a></div>
</div>
<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var p in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-white">@p.Nombre</h5>
                        <div class="mb-2">
                            <span class="badge bg-danger">@p.Categoria</span>
                            <span class="badge bg-secondary">@p.Anio</span>
                        </div>
                        <p class="card-text text-white-50 small">@(p.Sinopsis.Length > 100 ? p.Sinopsis.Substring(0, 100) + "..." : p.Sinopsis)</p>
                        @if (!string.IsNullOrEmpty(p.LinkPelicula))
                        {
                            <a href="@p.LinkPelicula" target="_blank" class="btn btn-sm btn-outline-light mb-2"><i class="fas fa-external-link-alt me-1"></i>Ver</a>
                        }
                        <div class="btn-group w-100 mt-2">
                            <a href="/Peliculas/Edit/@p.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="/Peliculas/Delete/@p.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center py-5">
            <i class="fas fa-film fa-4x text-muted mb-3"></i>
            <p class="text-muted">No hay películas</p>
        </div>
    }
</div>
